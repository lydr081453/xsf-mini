/* pages/product/detail.wxss */
.shoppingbar{
  background-color: #5eb9d4;
  flex-direction:  row;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
}
.shoppingbar button{
  margin-top: 15rpx;
  font-size: 25rpx;
  float: left;
  background:transparent;
  border-color: transparent; 
  color: #fff;
  min-width: 180rpx;
}
button::after{border:none;}

.shoppingbar text{
  margin-top: 30rpx;
  font-size: 25rpx;
  color:red;
  float: right;
  margin-right: 10rpx;
}
.shoppingbar label{
  border-left:1rpx solid #fff;
  height: 90rpx;
  float:left;
}

/*主容器*/  
.stepper {  
    width: 80px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin:0 auto;  
}  
  
/*加号和减号*/  
.stepper text {  
    width: 19px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper input {  
    width: 40px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
